{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "hooks": {},
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "âš¡ï¸ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ Bug Fixes"
          },
          {
            "type": "chore",
            "section": "ğŸ§¹ Chores"
          },
          {
            "type": "docs",
            "section": "ğŸ“„ Documentation"
          },
          {
            "type": "style",
            "section": "ğŸ¨ Styling"
          },
          {
            "type": "refactor",
            "section": "â™»ï¸ Refactoring"
          },
          {
            "type": "perf",
            "section": "ğŸ“ˆ Performance"
          },
          {
            "type": "test",
            "section": "ğŸ§ª Tests"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  },
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main",
    "tagName": "backend@v${version}",
    "tagAnnotation": "Release - backend@v${version}",
    "commitMessage": "Release - backend@v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "backend@v${version}",
    "releaseNotes": {
      "commit": "* ${commit.subject} (${sha}){ - thanks @${author.login}!}",
      "excludeMatches": [
        "br4dyb"
      ]
    },
    "preRelease": true,
    "makeLatest": true,
    "comments": {
      "submit": true,
      "issue": ":rocket: _This issue has been resolved in v${version}. See [${releaseName}](${releaseUrl}) for release notes._",
      "pr": ":rocket: _This pull request is included in v${version}. See [${releaseName}](${releaseUrl}) for release notes._"
    }
  },
  "npm": {
    "publish": false
  }
}